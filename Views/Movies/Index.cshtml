@model ASPVidly.ViewModels.MovieViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<ul>
    @foreach (var movie in Model.Movies)
    {
        string linkURL = HttpContext.Current.Request.Url.AbsolutePath + "/" + movie.Id;

        <li><a href=@linkURL>@movie.Name</a></li>
    }
</ul>

